<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kome.client.MainActivity">

    <Button
        android:id="@+id/connect_button"
        android:layout_width="98dp"
        android:layout_height="54dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="8dp"
        android:onClick="connect"
        android:text="Connect"
        app:layout_constraintBottom_toTopOf="@+id/editText4"
        app:layout_constraintEnd_toStartOf="@+id/disconnect_button"
        app:layout_constraintHorizontal_bias="0.722"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.941" />

    <Button
        android:id="@+id/disconnect_button"
        android:layout_width="112dp"
        android:layout_height="54dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        android:onClick="disconnect"
        android:text="Disconnect"
        app:layout_constraintBottom_toTopOf="@+id/editText3"
        app:layout_constraintEnd_toStartOf="@+id/get_time_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.968" />

    <Button
        android:id="@+id/get_time_button"
        android:layout_width="91dp"
        android:layout_height="53dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp"
        android:onClick="gettime"
        android:text="Get Time"
        app:layout_constraintBottom_toTopOf="@+id/editText3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button5"
        android:layout_width="147dp"
        android:layout_height="51dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:text="LED 1"
        android:onClick="led1"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button6"
        android:layout_width="145dp"
        android:layout_height="53dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="20dp"
        android:onClick="led2"
        android:text="LED 2"
        app:layout_constraintBottom_toTopOf="@+id/button7"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button7"
        android:layout_width="145dp"
        android:layout_height="53dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="20dp"
        android:onClick="led3"
        android:text="LED 3"
        app:layout_constraintBottom_toTopOf="@+id/button8"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button8"
        android:layout_width="147dp"
        android:layout_height="58dp"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="20dp"
        android:onClick="led4"
        android:text="LED 4"
        app:layout_constraintBottom_toTopOf="@+id/serverMessage"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button9"
        android:layout_width="101dp"
        android:layout_height="58dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="33dp"
        android:layout_marginStart="104dp"
        android:onClick="btn1"
        android:text="Button 1"
        app:layout_constraintBottom_toTopOf="@+id/button10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/button6" />

    <Button
        android:id="@+id/button10"
        android:layout_width="98dp"
        android:layout_height="52dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="35dp"
        android:layout_marginStart="104dp"
        android:onClick="btn2"
        android:text="Button 2"
        app:layout_constraintBottom_toTopOf="@+id/button11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/button7" />

    <Button
        android:id="@+id/button11"
        android:layout_width="101dp"
        android:layout_height="52dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="33dp"
        android:layout_marginStart="105dp"
        android:onClick="btn3"
        android:text="Button 3"
        app:layout_constraintBottom_toTopOf="@+id/serverMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/button8" />

    <EditText
        android:id="@+id/serverMessage"
        android:layout_width="317dp"
        android:layout_height="81dp"
        android:layout_marginBottom="34dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="20dp"
        android:background="@android:color/holo_blue_light"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:capitalize="words" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="138dp"
        android:layout_height="43dp"
        android:layout_marginBottom="56dp"
        android:layout_marginEnd="33dp"
        android:layout_marginStart="96dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="IP Address"
        app:layout_constraintBottom_toTopOf="@+id/button9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editText4" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Port Number"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
